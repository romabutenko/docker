ARG STAGE=${STAGE}
ARG PROJECT_NAME=${PROJECT_NAME}
FROM ${PROJECT_NAME}/${STAGE}/builder:latest

USER root

ARG API_REPO

ARG API_CODE_PATH_CONTAINER

RUN mkdir -p ${API_CODE_PATH_CONTAINER}

RUN git clone ${API_REPO} ${API_CODE_PATH_CONTAINER}

WORKDIR ${API_CODE_PATH_CONTAINER}

RUN composer install && \
    cp .env.example .env
